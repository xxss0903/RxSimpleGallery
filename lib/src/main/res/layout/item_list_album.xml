<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:gravity="center_vertical">
    <com.litao.android.lib.view.SquaredImageView
        android:id="@+id/image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:background="@color/photo_background_color"
        android:scaleType="centerInside"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/item_list_click_color"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/album_text_background_color"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:text="sssss"/>
    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/to"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:textColor="@color/album_text_background_color"/>
    <ImageView
        android:id="@+id/to"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/to"/>
</RelativeLayout>